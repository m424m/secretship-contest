@css {
  @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap');
}
@import "vars.styl"

*
*::before
*::after
  box-sizing border-box
  -webkit-tap-highlight-color transparent
  outline none
  appearance none

html
body
  padding 0
  margin 0
  width 100%
  height 100%
  color: text

#app
  height 100%
  margin auto
  max-width 842px
  font-family Roboto, sans-serif
  //-webkit-font-smoothing antialiased
  //-moz-osx-font-smoothing grayscale

  @media mobile
    max-width 600px

main
  margin auto
  padding 25px 15px

  @media (min-width 768px)
    padding 25px 0

h1, h2, h3, h4, h5, h6
  margin: 20px 0 10px 0
  position relative

  &:first-child
    margin-top 0

h1
  font-size 20px
  margin-top 32px
  margin-bottom 12px

h2
  font-size 20px
  margin-top 32px
  margin-bottom 12px

h4
  font-size 15px
  line-height 18px
  font-weight 600
  -webkit-font-smoothing antialiased
  margin-bottom 15px

p
  font-size 15px
  line-height 1.6
  margin 0 0 8.5px

hr
  margin-top 17px
  margin-bottom 17px
  border 0
  border-top 1px solid #eee

.text-page
  line-height 1.6

  img
    display block
    margin 10px auto 20px
    max-width 275px
    padding 10px 5px

    &.medium
      max-width 400px

    &.wide
      max-width 100%

  video
    display block
    margin 20px auto
    max-width 400px

a
  text-decoration none
  color link

  &:hover
    text-decoration underline

strong
  font-weight 500

small
  color text-secondary
  font-size 13px

blockquote
  margin 0 0 17px
  font-size 15px
  padding 5px 17px
  border-left 5px solid #179cde

button
input[type='submit']
a.button
  font-family inherit
  font-size 14px
  line-height 20px
  font-weight 500
  padding 14px 22px
  background-color accent
  border none
  transition background-color .2s ease
  text-transform none
  color #fff
  border-radius 6px
  display flex
  align-items center
  justify-content center
  gap 5px
  white-space nowrap
  cursor pointer
  text-decoration none

  &.small
    padding 9px 22px

  &.plain
    background none
    color link
    padding 0
    border-radius 0
    font-size 1rem
    font-weight 500

  &:not(.plain):hover
    background-color accent-hover

  &:disabled
    color rgba(255, 255, 255, 0.6)
    cursor not-allowed

.buttons
  display flex
  gap 10px
  align-items flex-start

form
  h4
    padding-left 15px
    padding-right 5px

  .input__wrapper
  button
  .radio-group
    margin 25px 0
    width 100%

  h4 + .input__wrapper
  h4 + button
    margin-top 18px

  [type='submit']
    margin 30px 0
    width 100%

  .form-group-slim
    .input__wrapper
    button
    .radio-group
      margin 15px 0

  @media mobile
    padding 0 20px

.input-row
  display flex
  gap 15px

.columns
  display flex
  flex-wrap wrap
  gap 20px
  justify-content center

  &.no-center
    justify-content flex-start

  @media mobile
    flex-direction column
    align-items center

  .column
    width 100%
    max-width calc(50% - 10px)

    @media desktop
      &:only-child
        max-width 400px

    @media mobile
      max-width 100%

section:not(:first-child)
  margin-top 30px

table
  border-collapse collapse
  width 100%

  th
    background-color white
    text-transform uppercase
    text-align start
    font-size 14px
    padding 15px 10px

  tbody
    tr
      td
        padding 15px 10px
        font-size 15px
        width 1%

        > *
          vertical-align middle

      &:nth-child(odd) td
        background-color #f3f4f7

.fade-enter-active
.fade-leave-active
  transition opacity .2s ease

.fade-enter-from
.fade-leave-to
  opacity 0
