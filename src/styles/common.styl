@import url('https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap');
@import "vars.styl"

*
  box-sizing border-box
  -webkit-tap-highlight-color transparent
  outline none

html
body
  padding 0
  margin 0
  width 100%
  height 100%
  color: text

#app
  height 100%
  margin auto
  max-width 842px
  font-family Roboto, sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

  @media mobile
    max-width 600px

main
  margin auto
  padding 25px 15px

  @media (min-width 768px)
    padding 25px 0

h1, h2, h3, h4, h5, h6
  margin: 20px 0 10px 0
  position relative

h1
  font-size 20px
  margin-top 32px
  margin-bottom 12px

h4
  font-size 15px
  line-height 18px
  font-weight 600
  -webkit-font-smoothing antialiased
  margin 0 15px 15px

p
  font-size 15px
  line-height 1.6

a
  text-decoration none
  color link

  &:hover
    text-decoration underline

strong
  font-weight 500

small
  color text-secondary
  font-size 13px

button
input[type='submit']
  font-family inherit
  font-size 14px
  line-height 20px
  font-weight 500
  padding 14px 22px
  background-color accent
  border none
  transition background-color .2s ease
  text-transform none
  color #fff
  border-radius 6px
  display flex
  align-items center
  justify-content center
  gap 5px
  white-space nowrap
  cursor pointer

  &.plain
    background none
    color link
    padding 0
    border-radius 0
    font-size 1rem
    font-weight 500

  &:not(.plain):hover
    background-color accent-hover

  &:disabled
    color rgba(255, 255, 255, 0.6)
    cursor not-allowed

form
  .input
  button
    margin 20px 0
    width 100%

  input[type='submit']
    margin 30px 0
    width 100%

.input-row
  display flex
  gap 15px

.columns
  display flex
  flex-wrap wrap
  gap 20px
  justify-content center

  @media mobile
    flex-direction column
    align-items center

  .column
    flex 1
    width 100%
    max-width 50%

    @media desktop
      &:only-child
        max-width 400px

    @media mobile
      max-width 100%

section:not(:first-child)
  margin-top 30px
