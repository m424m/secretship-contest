@import "vars.styl"

cols = 12

.container
  display grid
  width 100%
  grid-gap 30px
  align-items flex-start
  grid-template-columns repeat(cols, 1fr)
  grid-auto-rows minmax(min-content, max-content)

  > *
    width 100%

  grid-loop(size='')
    for i in 1..cols
      .col-{size}{i}
        grid-column-end span i
      .offset-{size}{i}
        grid-column-start i + 1
      .offset-{size}-{0}
        grid-column-start 0

  grid-loop()
  @media $tablet
    grid-loop('md-')
  @media $mobile
    display flex
    flex-direction column
    gap 20px
